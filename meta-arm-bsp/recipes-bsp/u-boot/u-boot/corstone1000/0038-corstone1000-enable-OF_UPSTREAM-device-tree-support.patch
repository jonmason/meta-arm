+	extsys0: remoteproc@1a010310 {
+		compatible = "arm,corstone1000-extsys";
+		reg = <0x1a010310 0x4>, <0x1a010314 0x4>;
+		reg-names = "reset-control", "reset-status";
+		firmware-name = "es_flashfw.elf";
+	};
+};
